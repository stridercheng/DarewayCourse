<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_above="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <ImageView
        android:id="@+id/divider"
        android:layout_above="@+id/rg_columns"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RadioGroup
        android:paddingTop="6dp"
        android:id="@+id/rg_columns"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <RadioButton
            android:id="@+id/rb_message"
            android:button="@null"
            android:text="消息"
            android:gravity="center"
            android:textColor="@drawable/main_rb_txt"
            android:textSize="12sp"
            android:drawableTop="@drawable/message_rb"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_contact"
            android:button="@null"
            android:text="联系人"
            android:gravity="center"
            android:textColor="@drawable/main_rb_txt"
            android:textSize="12sp"
            android:drawableTop="@drawable/contact_rb"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_space"
            android:button="@null"
            android:text="动态"
            android:gravity="center"
            android:textColor="@drawable/main_rb_txt"
            android:textSize="12sp"
            android:drawableTop="@drawable/space_rb"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />
    </RadioGroup>
</RelativeLayout>